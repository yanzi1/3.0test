<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.me.fanyin.tablet">

    <application android:allowBackup="true" android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name="com.me.fanyin.tablet.CourseListActivity" android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.me.fanyin.tablet.CourseDetailActivity" android:label="@string/title_course_detail"
                  android:parentActivityName="com.me.fanyin.tablet.CourseListActivity"
                  android:theme="@style/AppTheme.NoActionBar">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="com.me.fanyin.tablet.CourseListActivity" />
        </activity>
    </application>

</manifest>