<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collect_answer_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_background"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_xmedium">

    <LinearLayout
        android:id="@+id/collect_answer_item_status_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dip_size_5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/img_qa_tag"/>

        <TextView
            android:id="@+id/collect_answer_item_status_tv"
            style="@style/MainTypeItemTimeTV"
            android:layout_marginRight="-2dp"
            android:text="【未读】"
            android:textColor="@color/color_primary"/>

        <TextView
            android:id="@+id/collect_answer_item_status_repay_time_tv"
            style="@style/MainTypeItemTimeTV"
            android:layout_marginLeft="@dimen/spacing_small"
            android:text="回答时间：2017-03-06 13:64"
            android:textColor="@color/color_primary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_xmedium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collect_answer_item_title_tv"
            style="@style/MainTypeItemTitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/test"/>

        <TextView
            android:id="@+id/collect_answer_item_content_tv"
            style="@style/MainTypeItemTimeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_size_5"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/test"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/collect_answer_item_essence_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_size_10"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:src="@mipmap/tag_qa_a"/>

            <TextView
                android:id="@+id/collect_answer_item_user_tv"
                style="@style/MainTypeItemTimeTV"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:text="@string/test"/>

            <TextView
                android:id="@+id/collect_answer_item_time_tv"
                style="@style/MainTypeItemTimeTV"
                android:layout_marginLeft="@dimen/dip_size_10"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:text="@string/test"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/app_line_order"/>

</LinearLayout>

