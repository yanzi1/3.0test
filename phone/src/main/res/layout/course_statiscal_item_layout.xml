<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/course_statiscal_rootview"
    android:background="@drawable/selectable_item_background"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_size_0.5"
        android:layout_marginLeft="@dimen/spacing_large"
        android:background="@color/divider_line"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="17dp"
        >

        <View
            android:id="@+id/course_statiscal_color_view"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@color/color_primary"
            />

        <TextView
            android:id="@+id/course_statiscal_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:singleLine="true"
            android:lines="1"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/text_color_primary_dark"
            />

        <TextView
            android:id="@+id/course_statiscal_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_xmedium"
            android:textSize="@dimen/font_size_nomarl"
            android:textColor="@color/text_color_primary_light_more"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_large"
            android:src="@mipmap/ico_more"
            />

    </LinearLayout>

</LinearLayout>