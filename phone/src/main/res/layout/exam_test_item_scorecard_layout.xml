<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
   >

    <TextView
        android:id="@+id/title"
        style="@style/x_text"
        android:padding="@dimen/spacing_large"
        android:text="单选题"
        android:textSize="@dimen/dip_size_15" />

    <com.me.fanyin.zbme.widget.NoScrollGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="@dimen/spacing_large"
        android:numColumns="5"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/dip_size_14"
        android:paddingRight="@dimen/dip_size_14"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/spacing_large">

    </com.me.fanyin.zbme.widget.NoScrollGridView>

</LinearLayout>