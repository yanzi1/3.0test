<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_show"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_primary_btn_select"/>

    <LinearLayout
        android:id="@+id/more_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_xmedium"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_xmedium">

        <View
            android:layout_width="4dp"
            android:layout_height="15dp"
            android:background="@color/color_primary"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xmedium"
            android:text="@string/test"
            android:textColor="@color/text_color_primary_light"
            android:textSize="@dimen/font_size_medium"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/maintype_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/spacing_xsmall"
            android:drawableRight="@mipmap/ico_more"
            android:gravity="center"
            android:text="@string/more"
            android:textColor="@color/main_text_time"
            android:textSize="@dimen/font_size_nomarl"/>

    </LinearLayout>

</LinearLayout>