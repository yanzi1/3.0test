<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_dialog_weixin_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:background="@drawable/selectable_item_background"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:src="@mipmap/btn_share_weixin"/>

            <TextView
                style="@style/shareTextView"
                android:text="微信"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_sinaweibo_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:background="@drawable/selectable_item_background"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:src="@mipmap/btn_share_weibo"/>

            <TextView
                style="@style/shareTextView"
                android:text="新浪微博"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_qqzone_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:background="@drawable/selectable_item_background"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:src="@mipmap/btn_share_qqzone"/>

            <TextView
                style="@style/shareTextView"
                android:text="QQ空间"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_qq_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:background="@drawable/selectable_item_background"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:src="@mipmap/btn_share_qq"/>

            <TextView
                style="@style/shareTextView"
                android:text="手机QQ"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_dialog_pengyouquan_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:background="@drawable/selectable_item_background"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@color/transparent"
                android:src="@mipmap/btn_share_quan"/>

            <TextView
                style="@style/shareTextView"
                android:text="朋友圈"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/app_line"/>

    <TextView
        android:id="@+id/share_dialog_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="取消"
        android:background="@drawable/selectable_item_background"
        android:textColor="@color/text_color_primary_dark"
        android:textSize="@dimen/font_size_large"/>

</LinearLayout>