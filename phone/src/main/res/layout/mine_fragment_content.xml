<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/x_bg"
    android:layout_marginTop="0.5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_cache_tv"
                style="@style/x_mine_text1"
                android:drawableTop="@mipmap/btn_mine_download"
                android:text="我的下载"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_small"/>

            <TextView
                android:id="@+id/mine_notes_tv"
                style="@style/x_mine_text1"
                android:drawableTop="@mipmap/btn_mine_note"
                android:text="我的笔记"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_small"/>

            <TextView
                android:id="@+id/mine_errors_tv"
                style="@style/x_mine_text1"
                android:drawableTop="@mipmap/btn_mine_error"
                android:text="我的错题"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_small"/>

            <TextView
                android:id="@+id/mine_order_tv"
                style="@style/x_mine_text1"
                android:drawableTop="@mipmap/btn_mine_order"
                android:text="我的订单"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_small"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xmedium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_collect_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_collecting"
                android:text="我的收藏"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_answer_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_dayi"
                android:text="我的答疑"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_learning_record_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_jilu"
                android:text="学习记录"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_message_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_sessage"
                android:text="我的消息"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xmedium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_account_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_account"
                android:text="我的账户"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_invoice_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_bill"
                android:text="我的发票"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_books_activate_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_book"
                android:text="图书激活"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

            <include layout="@layout/app_line_mine"/>

            <TextView
                android:id="@+id/mine_curriculum_tv"
                style="@style/x_mine_text2"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ico_mine_course"
                android:text="开通课程"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_xnomarl"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xmedium"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>