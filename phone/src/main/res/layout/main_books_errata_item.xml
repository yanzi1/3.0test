<?xml version="1.0" encoding="utf-8"?>
<!--图书勘误-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/books_errata_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_item_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_xmedium"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_xmedium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/books_errata_title_tv"
                style="@style/MainTypeItemTitleSmallTV"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/test"/>

            <TextView
                android:id="@+id/books_errata_time_tv"
                style="@style/MainTypeItemTimeTV"
                android:layout_marginLeft="@dimen/spacing_large"
                android:text="@string/test"/>

        </LinearLayout>

        <TextView
            android:id="@+id/books_errata_books_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_time"
            android:textSize="@dimen/font_size_small"
            android:layout_marginTop="@dimen/spacing_xmedium"/>

    </LinearLayout>

    <include layout="@layout/app_line_order"/>

</LinearLayout>
