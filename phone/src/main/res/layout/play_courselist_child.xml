<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_courselist_child_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_primary_btn_select"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:minHeight="44dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/course_detail_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/course_play_icolight" />

            <TextView
                android:id="@+id/tv_local"
                android:layout_width="25dp"
                android:layout_height="14dp"
                android:layout_marginLeft="14dp"
                android:background="@color/color_primary"
                android:gravity="center"
                android:text="本地"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_xsmall" />

            <TextView
                android:id="@+id/play_courselist_child_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:text="第02讲 法律基础（一）"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/play_courselist_child_test"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="15dp"
                android:background="@drawable/course_test_tv"
                android:gravity="center"
                android:text="练习"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_small" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>