<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginLeft="@dimen/dip_size_10"
    android:layout_marginRight="@dimen/dip_size_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/study_record_item_title_body"
        android:padding="10dp"
        android:layout_marginTop="@dimen/dip_size_10"
        android:background="@color/white"
        android:gravity="center">
        <TextView
            android:layout_width="45dp"
            android:layout_height="1dp"
            android:background="@color/color_primary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:text="类型"
            android:textSize="@dimen/font_size_large"
            android:id="@+id/study_record_item_title"
            android:layout_margin="@dimen/dip_size_10"/>
        <TextView
            android:layout_width="45dp"
            android:layout_height="1dp"
            android:background="@color/color_primary"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/study_record_item_rv">
    </android.support.v7.widget.RecyclerView>

    <!--<include layout="@layout/intelligent_fragment_citem"-->
        <!--android:id="@+id/study_record_item_content_body"/>-->

</LinearLayout>