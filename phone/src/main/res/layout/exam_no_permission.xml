<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_no_permission_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dip_size_40"
            android:drawableTop="@mipmap/img_special_nopermission"
            android:gravity="center"
            android:text="您还没有权限哦~"
            android:textColor="@color/text_color_primary_light_more"
            android:textSize="@dimen/font_size_medium"/>

        <TextView
            android:id="@+id/app_no_permission_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dip_size_5"
            android:gravity="center_horizontal"
            android:text="[购书用户]需通过随书赠卡激活"
            android:textColor="@color/color_primary"
            />

        <TextView
            android:id="@+id/app_no_permission_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_size_50"
            android:layout_marginRight="@dimen/dip_size_50"
            android:layout_marginTop="@dimen/dip_size_10"
            android:background="@color/color_primary"
            android:gravity="center"
            android:padding="@dimen/dip_size_15"
            android:text="随书赠卡激活"
            android:textColor="@color/white"/>


        <LinearLayout
            android:id="@+id/app_no_permission_recommended_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dip_size_25"
            android:orientation="vertical"
            />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>