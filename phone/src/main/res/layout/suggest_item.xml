<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:orientation="vertical"
    android:layout_height="@dimen/main_fragment_indicator">

    <TextView
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:id="@+id/suggestion_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dip_size_15"
        android:paddingRight="@dimen/search_view_text_padding"
        android:textColor="@color/text_color_primary_dark"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:textSize="16sp" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/suggestion_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/search_icon_padding"
        android:paddingRight="@dimen/search_icon_padding"
        android:focusable="false"
        android:src="@mipmap/query_search_view_suggestion" />
    <View
        style="@style/full_line"
        />
</LinearLayout>