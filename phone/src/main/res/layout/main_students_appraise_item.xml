<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/spacing_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/students_appraise_icon_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            />

        <TextView
            android:id="@+id/students_appraise_user_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/spacing_medium"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/font_size_medium"
            />

        <TextView
            android:id="@+id/students_appraise_date_iv"
            style="@style/MainTypeItemTimeTV"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/font_size_nomarl"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/students_appraise_content_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_color_primary_dark"
        android:textSize="@dimen/font_size_medium"
        />

    <include layout="@layout/app_line_order"/>

</LinearLayout>