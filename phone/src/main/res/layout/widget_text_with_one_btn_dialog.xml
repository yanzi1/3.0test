<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/rootlayout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/search_layover_bg">

    <View
        android:id="@+id/outside_bg_v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/widget_text_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/text_dialog_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="33dp"
            android:paddingLeft="@dimen/spacing_xxxlarge"
            android:paddingRight="@dimen/spacing_xxxlarge"
            android:paddingTop="33dp"
            android:lineSpacingExtra="@dimen/spacing_nomarl"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/font_size_medium"/>

        <include layout="@layout/app_line"/>

        <TextView
            android:id="@+id/text_dailog_btn_tv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_bottom_round_background"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/font_size_xmedium"
            android:text="确认"/>

    </LinearLayout>

</FrameLayout>