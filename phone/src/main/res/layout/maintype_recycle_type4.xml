<?xml version="1.0" encoding="utf-8"?>
<!--考试倒计时-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing_xlarge"
        android:paddingRight="@dimen/spacing_xlarge">

        <ImageView
            android:id="@+id/main_type_item4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_daojishi"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_xmedium"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_item4_rest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_daojishi"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_nomarl"/>

            <TextView
                android:id="@+id/main_item4_rest_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/spacing_xnomarl"
                android:paddingRight="@dimen/spacing_xnomarl"
                android:text="258"
                android:textColor="@color/main_text_limit_time"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/main_item4_rest_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/font_size_nomarl"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_more"/>

    </LinearLayout>

</FrameLayout>
