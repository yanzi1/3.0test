<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/main_fragment_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:padding="@dimen/dip_size_10">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/push_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/push_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_size_10"
                android:text="@string/test"
                android:textColor="@color/exam_test_question_bottom_font" />
        </LinearLayout>

        <ImageView
            android:layout_margin="@dimen/dip_size_10"
            android:id="@+id/push_fragment_item_tubiao_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/myfault_ico_back"
            android:visibility="visible" />

    </LinearLayout>
    

    <View style="@style/x_line"
        android:layout_below="@id/main_fragment_item_ll"
        android:layout_marginLeft="@dimen/dip_size_10"
        />

</RelativeLayout>