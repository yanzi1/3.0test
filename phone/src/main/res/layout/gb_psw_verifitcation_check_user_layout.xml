<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/login_weibo_bt"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/spacing_xmedium"
        android:background="@drawable/login_weibo_bt_selector"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <CheckBox
                android:id="@+id/login_weibo_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/register_agree_terms_cb_selector"
                android:layout_centerVertical="true"
                android:enabled="false"
                android:focusable="false"
                />
            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/login_weibo_icon_iv"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_medium"
                android:textColor="@color/text_color_primary_dark"
                android:text="李完美"
                />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>