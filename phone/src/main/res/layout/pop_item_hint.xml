<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <View
        android:id="@+id/app_line"
        style="@style/full_line"
         />
    <LinearLayout
        android:paddingLeft="@dimen/dip_size_10"
        android:paddingRight="@dimen/dip_size_10"
        android:paddingTop="@dimen/dip_size_10"
        android:paddingBottom="@dimen/dip_size_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_tubiao"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_more_mycollect"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/text_color_primary"
            android:paddingLeft="10dp"
            android:text="aaaaaaaa"
            android:layout_gravity="center"/>
    </LinearLayout>
   

</LinearLayout>