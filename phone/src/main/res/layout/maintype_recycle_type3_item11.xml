<?xml version="1.0" encoding="utf-8"?>
<!--备考攻略-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_item_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_xmedium">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dip_size_10"
            android:orientation="vertical"
            android:paddingRight="@dimen/spacing_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maintype_item3_title"
                    style="@style/MainTypeItemTitleTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="2"
                    android:minLines="1"
                    android:text="@string/test"/>

                <TextView
                    android:id="@+id/maintype_type3_item2_time"
                    style="@style/MainTypeItemTimeTV"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:text="@string/test"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maintype_type3_item2_type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/test"
                    android:textColor="@color/text_color_primary_light_more"
                    android:textSize="@dimen/spacing_xxmedium"/>


            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/app_line"
            style="@style/full_line"
            />
    </LinearLayout>

</FrameLayout>
