<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/empty_layout_loading"
              android:gravity="center"
              android:background="@color/white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/app_loading_iv"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:src="@drawable/app_view_loading"/>

    <TextView
        android:id="@+id/app_loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:visibility="gone"
        android:text="@string/app_loading_message"
        android:textColor="@color/text_color_primary_light_more"
        android:textSize="@dimen/font_size_medium"/>

</LinearLayout>
