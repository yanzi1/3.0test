<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/course_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_second_color_primary"
            android:textSize="@dimen/font_size_nomarl" />

        <RelativeLayout
            android:id="@+id/network_error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/app_view_iv"
                android:layout_width="168dp"
                android:layout_height="157dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/img_special_nothing" />

            <TextView
                android:id="@+id/app_message_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_view_iv"
                android:layout_marginTop="@dimen/spacing_large"
                android:gravity="center_horizontal"
                android:text="@string/app_empty_message"
                android:textColor="@color/text_color_primary_light_more"
                android:textSize="@dimen/font_size_medium" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>