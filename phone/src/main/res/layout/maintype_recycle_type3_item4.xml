<?xml version="1.0" encoding="utf-8"?>
<!--免费课程-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selectable_item_background"
        android:orientation="vertical"
        >
        <!--android:paddingLeft="@dimen/spacing_large"-->
        <!--android:paddingBottom="@dimen/spacing_xmedium"-->
        <!--android:paddingRight="@dimen/spacing_large"-->
        <!--android:paddingTop="@dimen/spacing_xmedium"-->

        <com.me.fanyin.zbme.views.main.fragemnt.view.FreeCourseImageView
            android:id="@+id/maintype_type3_item4_iv"
            style="@style/MainTypeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/maintype_type3_item4_coursename"
                style="@style/MainTypeItemTitleSmallTV"
                android:layout_marginTop="@dimen/spacing_nomarl"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="1"
                android:text="@string/test"/>

            <LinearLayout
                android:layout_marginTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/maintype_type3_item4_zhujiang"
                    style="@style/MainTypeItemTimeTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ico_course_tea"
                    android:drawablePadding="2dp"
                    android:maxLines="1"
                    android:text="@string/main_type_zhujiang"
                    android:textColor="@color/text_color_primary"
                    />

                <TextView
                    android:id="@+id/maintype_type3_item4_type"
                    style="@style/MainTypeItemTypeTV"
                    android:ellipsize="end"
                    android:text="基金从业"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</FrameLayout>
