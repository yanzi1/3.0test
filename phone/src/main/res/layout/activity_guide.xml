<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/guide_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/spacing_xxlarge"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:background="@android:color/transparent"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/go_main_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_weibo_bt_selector"
            style="?android:borderlessButtonStyle"
            android:text="体验一下"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/text_color_primary"
            />

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/go_login_bt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_bt_confirm_selector"
            style="?android:borderlessButtonStyle"
            android:text="注册/登录"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/white"
            />


    </LinearLayout>

</RelativeLayout>
