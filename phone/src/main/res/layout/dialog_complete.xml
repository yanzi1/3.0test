<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exam_dialog_bg"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/dip_size_10"
        android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exam_advice"
        android:gravity="center"
        android:textColor="@color/exam_test_question_font"
        android:textSize="@dimen/font_size_xlarge"/>
    <TextView
        android:padding="@dimen/dip_size_10"
        android:id="@+id/tv_title_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/exam_complete"
        android:textColor="@color/exam_test_question_font"
        android:textSize="18sp" />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/divider_line" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:padding="@dimen/dip_size_15"
            android:id="@+id/tv_exam_contiue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/exam_contiue"
            android:textColor="@color/app_item_layout_text_selector"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/divider_line" />
        <TextView
            android:padding="@dimen/dip_size_15"
            android:id="@+id/tv_exam_submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/exam_submit"
            android:textColor="@color/app_item_layout_text_selector"
            android:textSize="16sp"
           />
    </LinearLayout>





</LinearLayout>