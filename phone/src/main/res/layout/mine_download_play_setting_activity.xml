<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/x_bg"
              android:orientation="vertical">

    <include layout="@layout/common_toolbar_layout"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_large"/>

    <LinearLayout
        android:id="@+id/course_play_multiple_setting_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="默认播放速度"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/spacing_xlarge"/>

        <TextView
            android:id="@+id/course_play_multiple_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ico_filter"
            android:text="1.0x"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/font_size_nomarl"/>

    </LinearLayout>

    <include layout="@layout/app_line_order"/>

    <LinearLayout
        android:id="@+id/video_clarity_setting_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="默认播放/下载清晰度"
            android:textColor="@color/text_color_primary_dark"
            android:textSize="@dimen/spacing_xlarge"/>

        <TextView
            android:id="@+id/video_clarity_setting_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="2dp"
            android:drawableRight="@mipmap/ico_filter"
            android:text="标清"
            android:textColor="@color/text_color_primary"
            android:textSize="@dimen/font_size_nomarl"/>

    </LinearLayout>

    <include layout="@layout/app_line_order"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/network_status_setting_ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="仅WIFI环境下下载"
                android:textColor="@color/text_color_primary_dark"
                android:textSize="@dimen/spacing_xlarge"/>

            <CheckedTextView
                android:id="@+id/network_status_setting_ctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_checkbox"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>